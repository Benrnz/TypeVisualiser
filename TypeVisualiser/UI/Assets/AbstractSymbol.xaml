<UserControl 
    x:Class="TypeVisualiser.UI.Assets.AbstractSymbol" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    d:DesignHeight="300" 
    d:DesignWidth="300" 
    mc:Ignorable="d" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid 
        Height="31" 
        Width="31">
        <Ellipse 
            Style="{StaticResource SymbolDecorator}" 
            ToolTip="Abstract" />
        <TextBlock 
            FontSize="24" 
            FontWeight="Bold" 
            Foreground="White" 
            HorizontalAlignment="Center" 
            Margin="0,-4,0,0" 
            Text="A" 
            ToolTip="Abstract" 
            VerticalAlignment="Center">
            <ContentPresenter />
        </TextBlock>
    </Grid>

</UserControl>
