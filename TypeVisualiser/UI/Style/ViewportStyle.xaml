<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="DiagramSpace" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,1"
                                     StartPoint="0.2,0">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Color="{StaticResource PortalBackgroundColor}"
                                      Offset="0" />
                        <GradientStop Color="{StaticResource PortalBackgroundHighlight1}"
                                      Offset="0.25" />
                        <GradientStop Color="White"
                                      Offset="0.5" />
                        <GradientStop Color="{StaticResource PortalBackgroundHighlight2}"
                                      Offset="0.75" />
                        <GradientStop Color="{StaticResource PortalBackgroundColor}"
                                      Offset="1" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
